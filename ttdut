import streamlit as st
import pandas as pd

# Dados simulados
dados = [
    {
        "Ordem de Produ√ß√£o": "10045262",
        "C√≥digo do Produto": "4570020",
        "Descri√ß√£o do C√≥digo": "C√ÇMERA IP DE V√çDEO BULLET VIP 3250 AL IA",
        "Quantidade": 500,
        "Status": "Conclu√≠do",
        "Respons√°vel Mec√¢nica": "Ian",
        "Recurso": "MFIP1-01"
    },
    {
        "Ordem de Produ√ß√£o": "10045262",
        "C√≥digo do Produto": "4570020",
        "Descri√ß√£o do C√≥digo": "C√ÇMERA IP DE V√çDEO BULLET VIP 3250 AL IA",
        "Quantidade": 500,
        "Status": "Em separa√ß√£o",
        "Respons√°vel Mec√¢nica": "Ian",
        "Recurso": "MFIP1-01"
    },
    # Adicione mais ordens aqui se quiser
]

df = pd.DataFrame(dados)

# Layout da p√°gina
st.set_page_config(layout="wide")
st.title("üì¶ Painel de Ordens de Produ√ß√£o")

# Mostrar cards em linhas de at√© 3 colunas
num_colunas = 3
linhas = [df[i:i+num_colunas] for i in range(0, len(df), num_colunas)]

for linha in linhas:
    cols = st.columns(len(linha))
    for i, (_, row) in enumerate(linha.iterrows()):
        cor_card = "#4CAF50" if row["Status"] == "Conclu√≠do" else "#FF9800"

        with cols[i]:
            st.markdown(
                f"""
                <div style="background-color: {cor_card}; padding: 20px; border-radius: 20px; color: white; font-family: sans-serif; margin-bottom: 10px;">
                    <h3 style="margin: 0;">{row['Ordem de Produ√ß√£o']}</h3>
                    <p style="margin: 5px 0;"><strong>{row['C√≥digo do Produto']}</strong> ‚Äì {row['Descri√ß√£o do C√≥digo']}</p>
                    <p style="margin: 5px 0;">Quantidade: {row['Quantidade']}</p>
                    <p style="margin: 5px 0;">Status: {row['Status']}</p>
                    <p style="margin: 5px 0;">Respons√°vel mec√¢nica: {row['Respons√°vel Mec√¢nica']}</p>
                    <p style="margin: 5px 0;">Centro de trabalho: {row['Recurso']}</p>
                </div>
                """,
                unsafe_allow_html=True
            )
